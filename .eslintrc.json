{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "node": true,
        "es6": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        // "indent": ["error", 4],
        "arrow-body-style": [
            "warn",
            "as-needed"
        ],
        "no-var": 2,
        // "complexity": [
        //     "error",
        //     4
        // ],
        "@typescript-eslint/explicit-function-return-type": 0,
        "no-undef": 2,
        "array-callback-return": 1,
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/no-unused-vars": "error",
        "no-shadow": [
            "error",
            {
                "hoist": "functions",
                "allow": [
                    "err"
                ]
            }
        ]
    }
}