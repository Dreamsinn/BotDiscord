{
  "name": "BotDiscord",
  "version": "1.0.0",
  "main": "./scr/main.ts",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.*(js|ts|yaml|yml|json)'"
    }
  },
  "dependencies": {
    "@types/node": "^17.0.10",
    "discord.js": "^13.6.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "test": "jest --runInBand",
    "test:silent": "jest --silent --runInBand",
    "serve": "ts-node-dev --respawn ./src/main.ts",
    "pritier": "pretty-quick --pattern '**/*.*(js|ts|json|yaml)'"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  }
